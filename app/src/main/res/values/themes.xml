<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <!--字体样式-->
    <style name="pmzd">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pmzdcushuti</item>
    </style>

    <style name="sourcehanserif">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sourcehanserif</item>
    </style>

    <style name="sourcehansans">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sourcehansans</item>
    </style>
    <style name="harmonysans">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/harmonysans</item>
    </style>
    <!--形状样式-->
    <style name="circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="diamond">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="normalSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/royalblue</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">@color/lightpurple</item>
    </style>
    <style name="uncheckedSwitch">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="backgroundTint">@color/gainsboro</item>
    </style>
    <style name="checkedSwitch">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/royalblue</item>
        <item name="strokeWidth">3dp</item>
    </style>
</resources>